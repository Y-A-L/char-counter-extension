{
  "manifest_version": 3,
  "name": "선택 텍스트 글자 수 세기",
  "version": "0.1.0",
  "description": "드래그한 텍스트를 우클릭 메뉴로 공백 포함/미포함 글자 수를 표시합니다.",
  "permissions": ["contextMenus"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ]
}
